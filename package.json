{
  "name": "hoz-mcp",
  "version": "0.3.0",
  "description": "MCP server for interaction with the lesson and event schedule.",
  "author": "Genius Agents",
  "homepage": "https://geniusagents.nl/",
  "main": "dist/lesson-server.js",
  "type": "module",
  "bin": {
    "mcp-hoz-lesson": "dist/lesson-server.js",
    "mcp-hoz-room": "dist/lesson-room.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('dist/index-lesson.js', '755')\" && node -e \"require('fs').chmodSync('dist/index-room.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector",
    "start": "node dist/index-lesson.js",
    "start-lesson": "node dist/index-lesson.js",
    "start-room": "node dist/index-room.js"
  },
  "dependencies": {
    "@geniusagents/mcp": "^0.2.0",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.4",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  }
}